{
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },

  // GIT
  "git.openRepositoryInParentFolders": "always",

  // Format on save
  "[typescript][json][jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  }
}
