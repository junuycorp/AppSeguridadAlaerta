{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "moduleResolution": "Node",
    "baseUrl": "packages",
    "paths": {
      "@agente/shared/*": ["./app-agente/src/features/@shared/*"],
      "@agente/*": ["./app-agente/src/*"],
      "@ciudadano/shared/*": ["./app-ciudadano/src/features/@shared/*"],
      "@ciudadano/*": ["./app-ciudadano/src/*"]
    },

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
